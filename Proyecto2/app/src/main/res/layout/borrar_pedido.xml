<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        tools:ignore="ExtraText"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/NumeroPedido"
            android:textColor="?colorPrimary"
            android:labelFor="@+id/tv_numeroPedido"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_numeroPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="16sp"
            tools:hint="@string/NumeroPedido"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/ClienteID"
            android:textColor="?colorPrimary"
            android:textSize="16sp"
            android:labelFor="@+id/tv_clienteIDPedido"
            />

        <TextView
            android:id="@+id/tv_clienteIDPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:hint="@string/ClienteID"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/fechaPedido"
            android:textColor="?colorPrimary"
            android:textSize="16sp"
            android:labelFor="@+id/tv_fechaPedido"
            />
        <TextView
            android:id="@+id/tv_fechaPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:hint="@string/fechaPedido"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/fechaRequerida"
            android:textColor="?colorPrimary"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_fechaRequerida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            tools:hint="@string/fechaRequerida"
            android:textSize="16sp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/NombreCompa単ia"
            android:textColor="?colorPrimary"
            android:textSize="16sp"
            android:labelFor="@+id/tv_nombre_compa単iaPedido"
            />

        <TextView
            android:id="@+id/tv_nombre_compa単iaPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:hint="@string/NombreCompa単ia"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/LineasPedido"
            android:textColor="?colorPrimary"
            android:labelFor="@+id/tv_LineasDelPedido"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_LineasDelPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:hint="@string/LineasPedido"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/ProductosEnPedido"
            android:textColor="?colorPrimary"
            android:labelFor="@+id/spi_nombreProducto"
            android:textSize="16sp"/>

        <Spinner
            android:id="@+id/spi_nombreProductoEnPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:spinnerMode="dropdown"
            android:background="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/CantidadEnPedido"
            android:textColor="?colorPrimary"
            android:labelFor="@+id/tv_CantidadEnPedido"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_CantidadEnPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:hint="@string/LineasPedido"
            android:textSize="16sp"
            />

    </LinearLayout>
</ScrollView>

