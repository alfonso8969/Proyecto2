<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        tools:ignore="ExtraText"
        android:weightSum="1">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/SeleccionarClienteId"
            android:textColor="?colorPrimary"
            android:textSize="16sp"
            android:labelFor="@+id/spi_clienteIDPedido"
            />

        <Spinner
            android:id="@+id/spi_clienteIDPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:spinnerMode="dropdown"
            android:background="@color/black"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/SeleccionarPedidoId"
            android:textColor="?colorPrimary"
            android:labelFor="@+id/spi_numeroPedido"
            android:textSize="16sp"
            />

        <Spinner
            android:id="@+id/spi_numeroPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:spinnerMode="dropdown"
            android:background="@color/black"
            />



        <TextView
            android:id="@+id/tv_mensage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:hint="Mensage"
            android:textSize="16sp"
            />

    </LinearLayout>
</ScrollView>
